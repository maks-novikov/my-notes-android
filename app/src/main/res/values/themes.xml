<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/accent</item>


        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <item name="materialButtonStyle">@style/generalButton</item>
    </style>

    <style name="Theme.MyNotes" parent="Base.Theme.MyNotes" />

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

    <style name="Theme.MyNotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />
    <style name="Theme.MyNotes.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="generalButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="submitButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="cornerRadius">4dp</item>
    </style>

</resources>